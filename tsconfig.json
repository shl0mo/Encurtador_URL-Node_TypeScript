{
  "compilerOptions": {
    "target": "es2016",    
    "module": "commonjs",    
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "typeRoots": [
    	"./node_modules/@types"
    ],
    "outDir": "./dist",
    "removeComments": true
  }
}
